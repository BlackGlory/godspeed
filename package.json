{
  "private": true,
  "version": "0.1.0",
  "name": "godspeed",
  "appId": "me.blackglory.godspeed",
  "productName": "Godspeed",
  "description": "",
  "repository": "git@github.com:BlackGlory/godspeed.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "main": "lib/main/index.js",
  "type": "module",
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src",
    "test": "vitest --run --passWithNoTests",
    "dev": "run-p dev:main dev:renderer",
    "dev:main": "tsc --project tsconfig.build.json --watch",
    "dev:renderer": "webpack serve --config webpack.dev.cjs",
    "start": "electron .",
    "clean": "run-p clean:*",
    "clean:main": "rimraf lib",
    "clean:renderer": "rimraf dist",
    "clean:release": "rimraf release",
    "build": "run-p build:*",
    "build:main": "tsc --project tsconfig.build.json",
    "build:renderer": "webpack --config webpack.prod.cjs",
    "release": "standard-version",
    "package": "electron-packager . --out=release --asar",
    "package:dev": "electron-packager . --out=release",
    "package:all": "electron-packager . --out=release --asar --all",
    "package:appx": "electron-builder build --windows appx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare lint test build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/electron-packager": "^1.0.5",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "18",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "autoprefixer": "^10.4.7",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "8.55.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "extra-fetch": "^4.0.7",
    "extra-request": "^8.5.2",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.6",
    "ts-loader": "^9.3.1",
    "ts-patch": "^3.1.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.3.3",
    "typescript-transform-paths": "^3.3.1",
    "vite": "^5.0.7",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.0.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.3.4",
    "@delight-rpc/electron": "^6.0.3",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^2.0.18",
    "classnames": "^2.3.1",
    "delight-rpc": "^6.1.2",
    "electron-context-menu": "^3.6.1",
    "extra-filesystem": "^0.5.1",
    "extra-promise": "^6.0.8",
    "extra-react-hooks": "^0.6.6",
    "extra-utils": "^5.6.0",
    "immer": "^10.0.3",
    "iterable-operator": "^4.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rxjs": "^7.8.1",
    "use-immer": "^0.9.0"
  }
}
