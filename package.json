{
  "private": true,
  "version": "0.1.1",
  "name": "godspeed",
  "appId": "me.blackglory.godspeed",
  "productName": "Godspeed",
  "description": "",
  "repository": "git@github.com:BlackGlory/godspeed.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "main": "lib/main/index.js",
  "type": "module",
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --quiet src",
    "test": "vitest --run --passWithNoTests",
    "dev": "run-p dev:main dev:renderer",
    "dev:main": "tsc --project tsconfig.build.json --watch",
    "dev:renderer": "webpack serve --config webpack.dev.cjs",
    "start": "electron .",
    "clean": "run-p clean:*",
    "clean:main": "rimraf lib",
    "clean:renderer": "rimraf dist",
    "clean:release": "rimraf release",
    "build": "run-p build:*",
    "build:main": "tsc --project tsconfig.build.json",
    "build:renderer": "webpack --config webpack.prod.cjs",
    "release": "standard-version",
    "package": "electron-packager . --out=release --asar",
    "package:dev": "electron-packager . --out=release",
    "package:all": "electron-packager . --out=release --asar --all",
    "package:appx": "electron-builder build --windows appx"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare lint test build",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/electron-packager": "^1.0.5",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.19.0",
    "@tailwindcss/postcss": "^4.0.4",
    "@types/node": "22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "extra-fetch": "^4.0.7",
    "extra-request": "^9.0.1",
    "husky": "^4.3.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.4",
    "ts-loader": "^9.5.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "typescript-transform-paths": "^3.5.3",
    "vite": "^6.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@blackglory/prelude": "^0.4.0",
    "@delight-rpc/electron": "^6.0.5",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "classnames": "^2.5.1",
    "delight-rpc": "^6.1.2",
    "electron-context-menu": "^4.0.5",
    "extra-filesystem": "^0.5.1",
    "extra-promise": "^7.0.0",
    "extra-react-hooks": "^0.8.0",
    "extra-utils": "^5.18.0",
    "immer": "^10.1.1",
    "iterable-operator": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rxjs": "^7.8.1",
    "use-immer": "^0.11.0"
  }
}
